{
  "name": "news-fragments",
  "version": "1.14.2",
  "description": "A release-it plugin to manipulate changelogs",
  "main": "src/index.js",
  "scripts": {
    "test": "jest --detectOpenHandles --collectCoverage --runInBand --verbose --forceExit",
    "lint": "eslint \"**/*.js\" --ignore-pattern node_modules/",
    "lint:fix": "eslint --fix \"**/*.js\" --ignore-pattern node_modules/",
    "release": "release-it"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/grupoboticario/news-fragments.git"
  },
  "keywords": [
    "release",
    "release-it",
    "release-it-plugin",
    "changelog",
    "grupoboticario"
  ],
  "author": "Grupo BoticÃ¡rio",
  "license": "Unlicense",
  "bugs": {
    "url": "https://github.com/grupoboticario/news-fragments/issues"
  },
  "homepage": "https://github.com/grupoboticario/news-fragments#readme",
  "devDependencies": {
    "@release-it/bumper": "^3.0.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.1",
    "mock-fs": "^5.1.0",
    "mockdate": "^3.0.5",
    "prettier": "^2.4.1",
    "pretty-quick": "^3.1.1",
    "semver": "^7.3.5",
    "sinon": "^11.1.2"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "fs-extra": "^10.0.0",
    "handlebars": "^4.7.7",
    "joi": "^17.4.2",
    "marked": "^3.0.7",
    "marked-terminal": "^4.2.0",
    "meow": "^10.1.1",
    "moment": "^2.29.1",
    "release-it": "^14.11.5"
  },
  "engines": {
    "node": ">=8"
  },
  "release-it": {
    "npm": false,
    "hooks": {
      "before:init": "npm test",
      "after:bump": "node myself-release.js"
    },
    "plugins": {
      "@release-it/bumper": {
        "out": [
          {
            "file": "sonar-project.properties",
            "type": "text/x-properties",
            "path": "sonar.projectVersion"
          },
          {
            "file": "package.json",
            "path": "version"
          }
        ]
      }
    }
  },
  "bin": {
    "news-fragments": "src/cli/index.js"
  }
}
