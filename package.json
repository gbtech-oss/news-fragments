{
  "name": "news-fragments",
  "version": "1.12.2",
  "description": "A release-it plugin to manipulate changelogs",
  "main": "src/index.js",
  "scripts": {
    "test": "jest --detectOpenHandles --collectCoverage --runInBand --verbose --forceExit",
    "lint": "eslint \"**/*.js\" --ignore-pattern node_modules/",
    "lint:fix": "eslint --fix \"**/*.js\" --ignore-pattern node_modules/",
    "release": "release-it"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/grupoboticario/news-fragments.git"
  },
  "keywords": [
    "release",
    "release-it",
    "release-it-plugin",
    "changelog",
    "grupoboticario"
  ],
  "author": "Grupo BoticÃ¡rio",
  "license": "Unlicense",
  "bugs": {
    "url": "https://github.com/grupoboticario/news-fragments/issues"
  },
  "homepage": "https://github.com/grupoboticario/news-fragments#readme",
  "devDependencies": {
    "@release-it/bumper": "^2.0.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.0.1",
    "mock-fs": "^5.0.0",
    "mockdate": "^3.0.5",
    "prettier": "^2.3.0",
    "pretty-quick": "^3.1.0",
    "semver": "^7.3.5",
    "sinon": "^11.1.1"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "chalk": "^4.1.1",
    "fs-extra": "^10.0.0",
    "handlebars": "^4.7.7",
    "marked": "^2.0.3",
    "marked-terminal": "^4.1.1",
    "meow": "^10.0.0",
    "moment": "^2.29.1",
    "release-it": "^14.6.2"
  },
  "engines": {
    "node": ">=8"
  },
  "release-it": {
    "npm": false,
    "hooks": {
      "before:init": "npm test",
      "after:bump": "node myself-release.js"
    },
    "plugins": {
      "@release-it/bumper": {
        "out": [
          {
            "file": "sonar-project.properties",
            "type": "text/x-properties",
            "path": "sonar.projectVersion"
          },
          {
            "file": "package.json",
            "path": "version"
          }
        ]
      }
    }
  },
  "bin": {
    "news-fragments": "src/cli/index.js"
  }
}
