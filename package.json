{
  "name": "@grupoboticario/news-fragments",
  "version": "0.0.0",
  "description": "A release-it plugin to manipulate changelogs",
  "main": "src/index.js",
  "scripts": {
    "test": "jest --collectCoverage --runInBand --verbose",
    "lint": "eslint \"**/*.js\" --ignore-pattern node_modules/",
    "release": "release-it"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/grupoboticario/news-fragments.git"
  },
  "keywords": [
    "release",
    "release-it",
    "release-it-plugin",
    "changelog",
    "grupoboticario"
  ],
  "author": "Grupo BoticÃ¡rio",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/grupoboticario/news-fragments/issues"
  },
  "homepage": "https://github.com/grupoboticario/news-fragments#readme",
  "devDependencies": {
    "@release-it/bumper": "^1.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "mock-fs": "^4.11.0",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "semver": "^7.1.3",
    "sinon": "^9.0.1"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.0",
    "fs-extra": "^8.1.0",
    "handlebars": "^4.7.3",
    "moment": "^2.24.0",
    "release-it": "^13.0.2"
  },
  "engines": {
    "node": ">=8"
  },
  "release-it": {
    "npm": false,
    "hooks": {
      "before:init": "npm test",
      "after:bump": "node myself-release.js"
    },
    "plugins": {
      "@release-it/bumper": {
        "out": [
          {
            "file": "sonar-project.properties",
            "type": "text/plain"
          }
        ]
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx pretty-quick --staged"
    }
  }
}
