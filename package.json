{
  "name": "@grupoboticario/news-fragments",
  "version": "1.7.0",
  "description": "A release-it plugin to manipulate changelogs",
  "main": "src/index.js",
  "scripts": {
    "test": "jest --collectCoverage --runInBand --verbose",
    "lint": "eslint \"**/*.js\" --ignore-pattern node_modules/",
    "release": "release-it"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/grupoboticario/news-fragments.git"
  },
  "keywords": [
    "release",
    "release-it",
    "release-it-plugin",
    "changelog",
    "grupoboticario"
  ],
  "author": "Grupo BoticÃ¡rio",
  "license": "Unlicense",
  "bugs": {
    "url": "https://github.com/grupoboticario/news-fragments/issues"
  },
  "homepage": "https://github.com/grupoboticario/news-fragments#readme",
  "devDependencies": {
    "@release-it/bumper": "^2.0.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.5.0",
    "mock-fs": "^4.13.0",
    "mockdate": "^3.0.2",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.0.2",
    "semver": "^7.3.2",
    "sinon": "^9.1.0"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "chalk": "^4.1.0",
    "fs-extra": "^9.0.1",
    "handlebars": "^4.7.6",
    "marked": "^1.2.0",
    "marked-terminal": "^4.1.0",
    "meow": "^8.0.0",
    "moment": "^2.29.0",
    "release-it": "^14.0.3"
  },
  "engines": {
    "node": ">=8"
  },
  "release-it": {
    "npm": false,
    "hooks": {
      "before:init": "npm test",
      "after:bump": "node myself-release.js"
    },
    "plugins": {
      "@release-it/bumper": {
        "out": [
          {
            "file": "sonar-project.properties",
            "type": "text/x-properties",
            "path": "sonar.projectVersion"
          },
          {
            "file": "package.json",
            "path": "version"
          }
        ]
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx pretty-quick --staged"
    }
  },
  "bin": {
    "news-fragments": "src/cli/index.js"
  }
}
